<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Nike Shop - Accueil</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <header class="site-header">
        <div class="logo">
            <h1><a href="/" style="color: inherit; text-decoration: none;">Nike Shop</a></h1>
        </div>
        <nav class="header-links">
            <a href="/cart" class="btn-cart">üõí Panier</a>
            <% if (user) { %>
                <a href="/logout" class="btn-logout">D√©connexion</a>
            <% } else { %>
                <a href="/login">Connexion</a>
            <% } %>
        </nav>
    </header>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="message-container"> <p class="cart-message"><%= message %></p></div>
    <% } %>

    <section class="hero-scroll-section">
        <div class="hero-content">
            <h1 class="hero-title-large">Boost Your Style. Boost Your Game.</h1>
            <p class="hero-subtitle-large">D√©couvrez les derni√®res nouveaut√©s et les incontournables de Nike.</p>
            <a href="#products" class="cta-button hero-cta-large">Voir les produits</a>
        </div>
        </section>

    <main class="main-container">
        <section id="products" class="products-section">
            <h2 class="products-title">Nos Collections</h2>
            <div class="products-grid">
              <% products.forEach(p => { %>
                <div class="product-item">
                    <a href="#" class="product-image-link" title="Voir <%= p.name %>">
                        <img src="<%= p.image %>" alt="<%= p.name %>" class="product-image">
                    </a>
                    <div class="product-details">
                        <p class="product-price"><%= p.price %> ‚Ç¨</p>
                        <form action="/add-to-cart/<%= p.id %>" method="POST" class="add-to-cart-form">
                             <button class="button-57 add-btn" role="button">
                                <span class="text">Ajouter</span>
                                <span class="alternate-text">Au Panier!</span> </button>
                        </form>
                    </div>
                </div>
            <% }) %>
            </div>
        </section>
        </main> <div id="toast-notification" class="toast" role="alert" aria-live="assertive"></div>

    <footer class="site-footer">
        <p>&copy; <%= new Date().getFullYear() %> Nike Shop. Tous droits r√©serv√©s.</p>
    </footer>

    <script src="https://unpkg.com/gsap@3/dist/gsap.min.js"></script>
    <script src="https://unpkg.com/gsap@3/dist/ScrollTrigger.min.js"></script>
    <script src="/scripts/scripts.js"></script>

</body>
</html>