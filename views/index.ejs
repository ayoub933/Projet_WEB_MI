<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Nike Shop - Accueil</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css"> </head>
<body>

    <%- include('partials/header') %>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="message-container">
             <p class="cart-message"><%= message %></p>
        </div>
    <% } %>

    <section class="hero-scroll-section">
        <div class="hero-content">
            <h1 class="hero-title-large">Boost Your Style. Boost Your Game.</h1>
            <p class="hero-subtitle-large">Découvrez les dernières nouveautés et les incontournables de Nike.</p>
            <a href="#products" class="cta-button hero-cta-large">Voir les produits</a>
        </div>
    </section>

    <main class="main-container">
        <section id="products" class="products-section">
            <h2 class="products-title">Nos Collections</h2>
            <div class="products-grid">

                <% if (typeof products !== 'undefined' && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="product-item">
                            <a href="/product/<%= product._id %>" class="product-image-link" title="Voir <%= product.name %>">
                                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image" onerror="this.onerror=null; this.src='/images/placeholder-nike.png';">
                            </a>
                            <div class="product-details">
                                <p class="product-price"><%= product.price %> €</p>
                                <form action="/add-to-cart/<%= product._id %>" method="POST" class="add-to-cart-form">
                                    <button class="button-57 add-btn" role="button">
                                        <span class="text">Ajouter</span>
                                        <span class="alternate-text">Au Panier!</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p style="color: white; text-align: center; grid-column: 1 / -1; padding: 2rem;">
                        Aucun produit disponible pour le moment.
                    </p>
                <% } %>

            </div> </section> </main> <div id="toast-notification" class="toast" role="alert" aria-live="assertive"></div>

    <%- include('partials/footer') %>

    <script src="https://unpkg.com/gsap@3/dist/gsap.min.js"></script>
    <script src="https://unpkg.com/gsap@3/dist/ScrollTrigger.min.js"></script>
    <script src="/scripts/scripts.js"></script>

</body>
</html>